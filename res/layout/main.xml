<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<TextView  
	android:id="@+id/bocadillo"
	android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="@string/hello"
    />
<ImageView android:id="@+id/character_image"
  android:layout_width="wrap_content"
  android:layout_height="250px"
  android:src="@drawable/enrique"
  />
  <EditText
        android:id="@+id/input_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
<Button android:layout_width="wrap_content" android:id="@+id/action_button" android:text="@string/enter_button" android:layout_height="wrap_content"></Button>

</LinearLayout>